#!/bin/bash
{{ if ne .wm "sway" -}}
exit 0
{{ end -}}

# ============================================
# sway packages
# ============================================

{{ if or (eq .chezmoi.osRelease.id "ubuntu") (eq .chezmoi.osRelease.id "pop") -}}
sudo apt-get update && sudo apt-get install -y sway waybar wofi alacritty foot

{{ else if eq .chezmoi.osRelease.id "fedora" -}}
sudo dnf install -y sway waybar wofi alacritty foot

{{ else if eq .chezmoi.osRelease.id "arch" -}}
sudo pacman -S --needed --noconfirm sway waybar wofi alacritty foot

{{ else -}}
echo "sway selected but no package list for {{ .chezmoi.osRelease.id }}"

{{ end -}}
